class Animal:
    def __init__(self, name, age):
        self.name = name
        self.age = age
    

    def print_informatie(self):
        return f'{self.name}, {self.age}'




class Dog(Animal): # Dog zal de funcities van de animal over nemen
    pass
    # Ik mag nu alle functies wegdoen en Dog zal animal inheritenten
