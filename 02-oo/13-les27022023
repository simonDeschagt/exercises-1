class Cat:
    def __init__(self, name, age):
        self.name = name
        self.age = age
    

    def print_informatie(self):
        return f'{self.name}, {self.age}'
    

class Bird:
    def __init__(self, name, age):
        self.name = name
        self.age = age
    

    def print_informatie(self):
        return f'{self.name}, {self.age}' 
    
# repititie is niet goed, dus we proberen op te lossen met inheritence

d = Dog("Lassy", 15)
